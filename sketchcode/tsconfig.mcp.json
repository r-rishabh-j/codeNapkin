{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist/mcp-server",
    "rootDir": "mcp-server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["mcp-server/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
